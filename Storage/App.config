<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>

	<connectionStrings>
		<add name="MyConnection"
			 connectionString="Data Source=USER-PC;Initial Catalog=Storage;Integrated Security=True; "/>
	</connectionStrings>
	<appSettings>
		<add key="Show_all_Products"	   value="SELECT * FROM Products"/>								
		<add key="Show_all_Type"		   value="SELECT * FROM TypeProducts"/>
		<add key="Show_all_Delivery"	   value="SELECT * FROM Delivery"/>
		<add key="Show_Products_Max_Count" value="SELECT TOP 1 * FROM Products ORDER BY [Count] DESC"/>
		<add key="Show_Products_Min_Count" value="SELECT TOP 1 * FROM Products ORDER BY [Count] ASC"/>		
		<add key="Show_Products_Min_Price" value="SELECT TOP 1 * FROM Products ORDER BY Price ASC"/>
		<add key="Show_Products_Max_Price" value="SELECT TOP 1 * FROM Products ORDER BY Price DESC"/>
		
	</appSettings>
	
</configuration>